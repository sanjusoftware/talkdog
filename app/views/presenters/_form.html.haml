= simple_form_for @presenter, :html => { :class => 'form-horizontal' } do |f|
  = f.input :name
  = f.input :bio
  = f.input :twitter_handle
  = f.input :email
  = f.input :company
  = f.input :position
  .form-actions
    = f.button :submit, :class => 'btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), presenters_path, :class => 'btn'
