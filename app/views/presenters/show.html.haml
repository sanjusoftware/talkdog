- model_class = Presenter
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @presenter.name
%p
  %strong= model_class.human_attribute_name(:bio) + ':'
  %br
  = @presenter.bio
%p
  %strong= model_class.human_attribute_name(:twitter_handle) + ':'
  %br
  = @presenter.twitter_handle
%p
  %strong= model_class.human_attribute_name(:email) + ':'
  %br
  = @presenter.email
%p
  %strong= model_class.human_attribute_name(:company) + ':'
  %br
  = @presenter.company
%p
  %strong= model_class.human_attribute_name(:position) + ':'
  %br
  = @presenter.position

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), presenters_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_presenter_path(@presenter), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), presenter_path(@presenter), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
